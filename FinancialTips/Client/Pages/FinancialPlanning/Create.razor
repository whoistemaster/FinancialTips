@page "/financialplannings/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Create New Financial Plannings</h3>
<hr />
<br />
<EditForm Model="@financialplanning" OnValidSubmit="CreateFinancialPlanning">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="@financialplanning.Name" class="form-control" />
            <ValidationMessage For="@(() => financialplanning.Name)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-block">
        Create Financial Plannings
    </button>
</EditForm>


@code {
    FinancialPlanning financialplanning = new FinancialPlanning();

    private async Task CreateFinancialPlanning()
    {
        await _client.PostAsJsonAsync(Endpoints.FinancialPlanningsEndpoint, financialplanning);
        _navManager.NavigateTo("/financialplannings/");
    }

}
