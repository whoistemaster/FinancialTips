@page "/tips/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager
<h3>View</h3>
<FormComponent tip="tip" Disabled="true" />
@code {
    [Parameter] public int id { get; set; }
    Tip tip = new Tip();
    protected async override Task OnParametersSetAsync()
    {
        tip = await
        _client.GetFromJsonAsync<Tip>($"{Endpoints.TipsEndpoint}/{id}");
    }
}